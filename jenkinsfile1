pipeline {
    agent any
    options {
        timeout(time: 30, unit: 'SECONDS')
    }
    tools {
        maven 'maven'
    }
    stages {
        stage('checkout') {
            steps {
                git url: 'https://github.com/HouariZegai/Calculator.git', branch: 'master'
            }
        }
        stage('scm') {
            steps {
                sh 'mvn  install -Dmaven.test.skip=true'
                echo "build succesful"
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}